    <%- contentFor('body') %>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="dataTables" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="text-center">No</th>
                                    <th>Nama Lengkap</th>
                                    <th>Nama Properti</th>
                                    <th class="text-center">Nama Properti</th>
                                    <th class="text-center">Tanggal Masuk</th>
                                    <th class="text-center">Durasi</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-center">Lainnya</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(function () {
            var table = $('#dataTables').DataTable({
                processing: false,
                serverSide: true,
                ajax: {
                    url: '/api/daftar-penyewa',
                    type: "POST",
                },
                order: [0, "asc"],
                columns: [{
                        className: "text-center",
                        width: "10%",
                        data: {data: "no"},
                        render: function (data, type, row, meta) {
                            return data.no;
                        }
                    },{
                        className: "text-left",
                        width: "20%",
                        data: {data: "nama"},
                        render: function (data, type, row, meta) {
                            return data.nama;
                        }
                    },{

                        className: "text-left",
                        width: "15%",
                        data: {data: "tanggal_transaksi"},
                        render: function (data, type, row, meta) {
                            return (data.tanggal_transaksi != null) ? data.tanggal_transaksi : '-';
                        }
                    },{

                        className: "text-center",
                        width: "15%",
                        data: {data: "properti"},
                        render: function (data, type, row, meta) {
                            return data.properti;
                        }
                    },{

                        className: "text-left",
                        width: "15%",
                        data: {data: "tanggal_masuk"},
                        render: function (data, type, row, meta) {
                            return data.tanggal_masuk;
                        }
                    }, {

                        className: "text-center",
                        width: "15%",
                        data: {data: "durasi"},
                        render: function (data, type, row, meta) {
                            return data.durasi+" Tahun";
                        }
                    },  {

                        className: "text-center",
                        width: "15%",
                        data: {data: "status"},
                        render: function (data, type, row, meta) {
                            return data.status;
                        }
                    }, {
                        className: "text-center",
                        width: "10%",
                        data: {data: "id"},
                        render: function (data, type, row, meta) {
                            return '<a href="/kontrakan/'+data.id+'" class="btn btn-sm btn-success mr-2"><i class="icon-eye"></i></a>'+
                            '<button class="btn btn-sm btn-danger"><i class="icon-trash"></i></button>';
                        }
                    },
                ],
                columnDefs: [{
                    "orderable": false,
                    "targets": 7
                }],
            });
        });
    </script>